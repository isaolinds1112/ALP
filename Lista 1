2. Exercício 2
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner s = new Scanner(System.in);
        
        int a = s.nextInt();
        int b = s.nextInt();
        
        int x = a + b;
        
        System.out.println("X = " + x);
        
        s.close();
    }
}
